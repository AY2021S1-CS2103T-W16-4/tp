<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane styleClass="status-bar" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
  </columnConstraints>
  <HBox minWidth="340" prefWidth="500"  HBox.hgrow="ALWAYS">
    <Label fx:id="emptyLeft" alignment="CENTER_LEFT"/>
    <Label fx:id="currentSessionLeftStatus" prefWidth="1000" alignment="CENTER_LEFT"/>
    <Label fx:id="currentSessionRightStatus" prefWidth="500" textAlignment="RIGHT" alignment="CENTER_RIGHT"/>
    <Label fx:id="emptyRight" alignment="CENTER_RIGHT"/>
  </HBox>
</GridPane>
